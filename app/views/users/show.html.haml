
.row
  .large-12.columns
    %h3 User
    %p
      User: #{@user.name}
    %p
      Email: #{@user.email if @user.email}

.row
  .large-12.columns
    %h3 Joined Projects
    -@joined.each do |p|
      =p.project.name
.row
  .large-12.columns
    %h3 completed todos
    -@completes.each do |c|
      =c.todo.description if !c.todo.nil?



