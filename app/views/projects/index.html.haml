.row
  .large-12.columns
    -if params[:action] == "joined"
      %h1="joined lists"
    -elsif params[:action] == "owner"
      %h1="my lists"
    -elsif params[:city]
      %h1="#{@location.split(',')[0]} to-do lists"

.row
  .large-12.columns
    %ul.small-block-grid-2.large-block-grid-4
      -@projects.each do |p|
        %li
          = link_to image_tag(city_image(p, '320x200#')), project_path(p), :class=>"th"
          .small_title.pacifico
            =p.name

