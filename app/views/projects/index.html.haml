.row
  .large-12.columns
    %h1
      =link_to 'New Project', new_project_path

-@projects.each do |project|
  .row
    .large-4.columns=link_to project.name, project_todos_path(project)
    .large-2.columns= project.description
    .large-2.columns= link_to 'Show', project
    .large-2.columns= link_to 'Edit', edit_project_path(project)
    .large-2.columns= link_to 'Destroy', project, :method => :delete, :data => { :confirm => 'Are you sure?' }

