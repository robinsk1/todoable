= simple_form_for(@project) do |f|
  - if @project.errors.any?
    #errorExplanation
      %h2
        = pluralize(@project.errors.count, "error")
        prevented this user from being saved:
      %ul
        - @project.errors.full_messages.each do |msg|
          %li
            = msg
  .form-inputs
    = f.input :location, :label => false
    = f.input :name, :label => false, placeholder: 'Give your list a name'
    = f.input :description, :label => false, placeholder: 'Add some detail to your list (if required)'

  .form-actions
    -button_text =  @project.new_record? ? "Create list" : "Update list"
    = f.button :submit, button_text ,:class=>"button", :style => "float:right;"
